    "prettier": "^1.18.2",
    "rollup": "^1.21.4",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.24.2",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.0.2",
